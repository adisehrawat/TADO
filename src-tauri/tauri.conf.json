{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tado_app",
  "version": "0.1.0",
  "identifier": "com.tado_app.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "tado_app",
        "width": 500,
        "height": 500,
        "transparent": true,
        "alwaysOnTop": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
